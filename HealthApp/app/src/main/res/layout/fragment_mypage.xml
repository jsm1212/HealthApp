<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.MypageFragment">
    <TextView
            android:id="@+id/MypageNickname"
            android:hint="닉네임"
            android:gravity="center" android:textSize="20sp"
            android:layout_width="250dp" android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>
    <Button
            android:id="@+id/MypageUpdateBtn"
            android:text="회원정보 수정"
            android:layout_width="200dp" android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.167" app:layout_constraintTop_toBottomOf="@+id/MypageNickname"
            android:layout_marginTop="30dp"/>
    <Button
            android:id="@+id/MypageLogoutBtn"
            android:text="로그아웃"
            android:layout_width="200dp" android:layout_height="60dp"
            app:layout_constraintStart_toEndOf="@+id/MypageUpdateBtn"
            app:layout_constraintTop_toTopOf="@+id/MypageUpdateBtn"
            app:layout_constraintBottom_toBottomOf="@+id/MypageUpdateBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/MypageRoutineBtn"
            android:text="내 운동루틴"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:background="@drawable/mypage_line"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MypageNickname"
            android:layout_marginTop="120dp"/>
    <Button
            android:id="@+id/MypageWriteBtn"
            android:text="내 게시글"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:background="@drawable/mypage_line"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MypageRoutineBtn"
            android:layout_marginTop="-3dp"/>
    <Button
            android:id="@+id/MypageReplyBtn"
            android:text="내 댓글"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:background="@drawable/mypage_line"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MypageWriteBtn"
            android:layout_marginTop="-3dp"/>
    <Button
            android:id="@+id/MypageLikeBtn"
            android:text="내가 공감한 글"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:background="@drawable/mypage_line"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MypageReplyBtn"
            android:layout_marginTop="-3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>