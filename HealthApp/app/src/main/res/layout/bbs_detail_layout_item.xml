<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/itemback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


    <TextView
            android:text="닉네임은여덟글자(id is normal)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyWriter"
            android:textSize="16sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:textFontWeight="700"
            app:layout_constraintStart_toStartOf="@+id/bbsReplyContent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="댓글 내용"
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyContent"
            app:layout_constraintTop_toBottomOf="@+id/bbsReplyWriter"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteX="8dp"/>
    <TextView
            android:text="삭제"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:background="@drawable/itemback"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyDelete"
            app:layout_constraintTop_toTopOf="@+id/bbsReplyWriter"
            app:layout_constraintBottom_toBottomOf="@+id/bbsReplyWriter"
            app:layout_constraintEnd_toEndOf="@+id/bbsReplyContent" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>