<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


    <TextView
            android:text="닉네임은여덟글자(id is normal)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyWriter"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/bbsReplyContent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="댓글 내용"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyContent"
            app:layout_constraintTop_toBottomOf="@+id/bbsReplyWriter"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteX="8dp"/>
    <TextView
            android:text="수정"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyUpdate"
            app:layout_constraintEnd_toStartOf="@+id/bbsReplyDelete" app:layout_constraintTop_toTopOf="@+id/bbsReplyDelete"
            app:layout_constraintBottom_toBottomOf="@+id/bbsReplyDelete" android:layout_marginEnd="18dp"/>
    <TextView
            android:text="답글"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyReply"
            app:layout_constraintEnd_toEndOf="@+id/bbsReplyContent"
            app:layout_constraintBottom_toBottomOf="@+id/bbsReplyWriter" app:layout_constraintTop_toTopOf="@+id/bbsReplyWriter"/>
    <TextView
            android:text="삭제"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/bbsReplyDelete"
            app:layout_constraintEnd_toStartOf="@+id/bbsReplyReply"
            android:layout_marginEnd="18dp" app:layout_constraintTop_toTopOf="@+id/bbsReplyReply"
            app:layout_constraintBottom_toBottomOf="@+id/bbsReplyReply"/>
</androidx.constraintlayout.widget.ConstraintLayout>