<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.CalendarFragment">

    <CalendarView
            android:layout_width="567dp"
            android:layout_height="379dp"
            android:id="@+id/calendarView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.043" app:layout_constraintHorizontal_bias="0.515"/>
    <TextView
            android:text="What is the date today?"
            android:layout_width="567dp"
            android:layout_height="66dp"
            android:id="@+id/diaryTextView"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.407"
            app:layout_constraintHorizontal_bias="0.515"/>
    <TextView
            android:text="내용을 입력해 주세요."
            android:layout_width="567dp"
            android:layout_height="42dp"
            android:id="@+id/caltextView"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
    />
    <EditText
            android:layout_width="564dp"
            android:layout_height="54dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/contextEditText"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.565"/>
    <TextView
            android:text="TextView"
            android:layout_width="565dp"
            android:layout_height="124dp"
            android:id="@+id/contentView"
            android:visibility="invisible"
            android:background="@drawable/caltext_line"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.7"/>
    <Button
            android:text="저장"
            android:layout_width="547dp"
            android:layout_height="58dp"
            android:id="@+id/save_Btn"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintVertical_bias="0.808"/>
    <Button
            android:text="수정"
            android:layout_width="229dp"
            android:layout_height="57dp"
            android:id="@+id/cha_Btn"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintVertical_bias="0.808"/>
    <Button
            android:text="삭제"
            android:layout_width="228dp"
            android:layout_height="58dp"
            android:id="@+id/del_Btn"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintVertical_bias="0.809"/>


</androidx.constraintlayout.widget.ConstraintLayout>