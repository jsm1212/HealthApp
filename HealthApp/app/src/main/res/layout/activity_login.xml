<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="561dp"
            android:layout_height="634dp"
            android:background="@drawable/border_line"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.512" app:layout_constraintVertical_bias="0.426">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/home" android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.102"/>
        <TextView
                android:id="@+id/loginTextView"
                android:text="아이디"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="105dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.254" app:layout_constraintVertical_bias="0.614"/>
        <TextView
                android:id="@+id/loginTextView2"
                android:text="비밀번호"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="105dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.254" app:layout_constraintVertical_bias="0.783"/>
        <EditText
                android:id="@+id/loginEditId"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.711" app:layout_constraintVertical_bias="0.61"/>
        <EditText
                android:id="@+id/loginEditPwd"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.712" app:layout_constraintVertical_bias="0.768"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtn"
                android:text="로그인"
                android:textSize="20dp"
                android:textColor="@color/mainfontcolor"
                android:background="@color/maincolor"
                android:gravity="center"
                android:layout_width="174dp"
                android:layout_height="53dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.943"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>