<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.FindPwdFragment">
    <TextView
            android:text="비밀번호 찾기"
            android:textSize="20dp" android:textStyle="bold"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp">
        <TextView
                android:text="아이디"
                android:textSize="20dp" android:textStyle="bold"
                android:gravity="center"
                android:layout_width="150dp" android:layout_height="50dp"
                app:layout_constraintEnd_toStartOf="@+id/findIdEditText2"
                android:layout_marginEnd="20dp"/>
        <TextView
                android:text="이름"
                android:textSize="20dp" android:textStyle="bold"
                android:gravity="center"
                android:layout_width="150dp" android:layout_height="50dp"
                app:layout_constraintEnd_toStartOf="@+id/findNameEditText2"
                app:layout_constraintTop_toTopOf="@+id/findNameEditText2"
                android:layout_marginEnd="20dp"/>
        <TextView
                android:text="전화번호"
                android:textSize="20dp" android:textStyle="bold"
                android:gravity="center"
                android:layout_width="150dp" android:layout_height="50dp"
                app:layout_constraintEnd_toStartOf="@+id/findTelEditText2"
                app:layout_constraintTop_toTopOf="@+id/findTelEditText2"
                android:layout_marginEnd="20dp"/>
        <EditText
                android:id="@+id/findIdEditText2"
                android:textSize="15dp"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:background="@drawable/border_line"
                android:layout_width="250dp" android:layout_height="50dp"
                android:inputType="textNoSuggestions|textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.75"/>
        <EditText
                android:id="@+id/findNameEditText2"
                android:textSize="15dp"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:background="@drawable/border_line"
                android:layout_width="250dp" android:layout_height="50dp"
                android:inputType="textNoSuggestions|textPersonName"
                android:ems="10"
                app:layout_constraintTop_toBottomOf="@+id/findIdEditText2"
                app:layout_constraintEnd_toEndOf="@+id/findIdEditText2"
                android:layout_marginTop="30dp"/>
        <EditText
                android:id="@+id/findTelEditText2"
                android:textSize="15dp"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:background="@drawable/border_line"
                android:layout_width="250dp" android:layout_height="50dp"
                android:inputType="textNoSuggestions|phone"
                android:ems="10"
                app:layout_constraintTop_toBottomOf="@+id/findNameEditText2"
                app:layout_constraintEnd_toEndOf="@+id/findNameEditText2"
                android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:id="@+id/findMyPwdBtn"
            android:text="찾기"
            android:textSize="20dp" android:textStyle="bold"
            android:backgroundTint="@color/maincolor"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>