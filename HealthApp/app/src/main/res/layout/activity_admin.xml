<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".admin.AdminActivity">
    <Button
            android:id="@+id/adminMemberBtn"
            android:text="회원관리" android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
    <Button
            android:id="@+id/adminBbsBtn"
            android:text="게시판관리" android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/adminMemberBtn"
            android:layout_marginTop="50dp"/>
    <Button
            android:id="@+id/adminTrainerBtn"
            android:text="트레이너관리" android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/adminBbsBtn"
            android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>