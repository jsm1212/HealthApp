<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.AdminFragment">
    <TextView
            android:id="@+id/textmember"
            android:text="회원 관리"
            android:gravity="center" android:textSize="30sp"
            android:layout_width="match_parent" android:layout_height="50dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyMember"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="20dp"
            android:background="@drawable/border_line"
            app:layout_constraintTop_toBottomOf="@+id/textmember"/>
    <Button
            android:id="@+id/adminLogout"
            android:text="로그아웃" android:textSize="20sp"
            android:backgroundTint="@color/maincolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/recyMember"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>