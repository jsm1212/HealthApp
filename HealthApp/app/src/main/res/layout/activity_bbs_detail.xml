<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bbs.BbsDetailActivity">

    <androidx.core.widget.NestedScrollView
            android:layout_width="535sp"
            android:layout_height="820dp" android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="게시글 제목"
                    android:layout_width="414dp"
                    android:layout_marginBottom="8sp"
                    android:textSize="25sp"
                    android:gravity="center|left"
                    android:layout_height="40sp" android:id="@+id/bbsDetailTitle"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="닉네임여덟글자다(iddmlspdladmf)"
                        android:layout_width="200sp"
                        android:textSize="18sp"
                        android:gravity="center|left"
                        android:layout_height="28sp" android:id="@+id/bbsDetailWriter" android:layout_weight="1"/>
                <TextView
                        android:text="2022-03-29-10:20"
                        android:layout_width="80sp"
                        android:textSize="16sp"
                        android:gravity="center|left"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"
                        android:layout_height="28sp" android:id="@+id/bbsDetailWdate" android:layout_weight="1"/>
                <TextView
                        android:text="53 / ❤21"
                        android:layout_width="20sp"
                        android:layout_marginRight="5sp"
                        android:textSize="16sp"
                        android:gravity="center|right"
                        android:layout_height="28sp" android:id="@+id/bbsDetailRcLike" android:layout_weight="1"/>
            </LinearLayout>
            <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8sp"
                    android:layout_marginTop="8sp"
                    android:layout_height="300sp" android:id="@+id/viewPager"/>
            <TextView
                    android:text="게시글 내용"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_height="wrap_content" android:id="@+id/bbsDetailContent"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="369dp"
                        android:textSize="1sp"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                        android:visibility="invisible"/>
                <TextView
                        android:text="수정"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/bbsUpdateView" android:layout_weight="1"
                        android:visibility="gone"/>
                <TextView
                        android:text="삭제"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_height="wrap_content" android:id="@+id/bbsDeleteView" android:layout_weight="1"
                        android:visibility="gone"/>
            </LinearLayout>
            <TextView
                    android:text="댓글목록"
                    android:textSize="25sp"
                    android:layout_marginBottom="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="작성된 댓글이 없습니다."
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="34dp" android:id="@+id/nonReply"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="260dp" android:id="@+id/bbsDetailReplyRv"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="480dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/bbsDetailWriteReply" android:layout_weight="1"/>
                <Button
                        android:text="등록"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/writeReplyBtn" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>