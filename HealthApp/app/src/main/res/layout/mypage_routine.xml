<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bbsback"
        tools:context=".mypage.MypageRoutineActivity">
    <LinearLayout
            android:id="@+id/myrtLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">
        <TextView
                android:text=""
                android:layout_width="150dp"
                android:layout_height="30dp"/>
        <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="운동명" android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        <TextView
                android:layout_width="100dp" android:layout_height="30dp"
                android:text="운동부위" android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyRoutine"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            app:layout_constraintTop_toBottomOf="@+id/myrtLinear"/>
</androidx.constraintlayout.widget.ConstraintLayout>