<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/itemback"
        android:layout_margin="5dp">
    <ImageView
            android:id="@+id/workimg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_launcher_foreground"
    />
    <TextView
            android:id="@+id/workname"
            android:text="운동 이름"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/workimg"
            android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="@+id/workimg"
            android:layout_marginTop="12dp"/>
    <TextView
            android:id="@+id/workexplanation"
            android:text="간단한 설명"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/workname"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="카테고리"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:id="@+id/workcategory"
            app:layout_constraintStart_toEndOf="@+id/workname"
            android:layout_marginStart="68dp"
            app:layout_constraintTop_toTopOf="@+id/workname" app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>