<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bbs.BbsUpdateActivity">

    <Button
            android:text="사진선택"
            android:layout_width="95sp"
            android:layout_height="38sp" android:id="@+id/BbsUpdateUploadBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/BbsUpdateTitle" android:layout_marginTop="6dp"/>
    <TextView
            android:id="@+id/BbsUpdateTitle"
            android:layout_width="495sp"
            android:layout_height="50sp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textSize="23sp"
            android:gravity="center|left"
            android:hint="title..."
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp" app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:text="Add Images"
            android:textSize="20sp"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/BbsUpdateTitle"
            app:layout_constraintTop_toBottomOf="@+id/BbsUpdateTitle" android:layout_marginTop="8dp"/>
    <TextView
            android:text="No file selected"
            android:layout_width="397sp"
            android:textSize="15sp"
            android:gravity="center|left"
            android:layout_height="30sp" android:id="@+id/BbsUpdateSelectImg"
            app:layout_constraintStart_toStartOf="@+id/textView6" app:layout_constraintTop_toTopOf="@+id/BbsUpdateUploadBtn"
            app:layout_constraintBottom_toBottomOf="@+id/BbsUpdateUploadBtn"/>
    <EditText
            android:layout_width="495sp"
            android:layout_height="500sp"
            android:inputType="textPersonName"
            android:hint="content..."
            android:ems="10"
            android:gravity="top|left"
            android:textSize="20sp"
            android:id="@+id/BbsUpdateContent"
            app:layout_constraintStart_toStartOf="@+id/BbsUpdateTitle"
            app:layout_constraintEnd_toEndOf="@+id/BbsUpdateTitle"
            app:layout_constraintTop_toBottomOf="@+id/BbsUpdateSelectImg" android:layout_marginTop="12dp"/>
    <Button
            android:text="목록으로"
            android:layout_width="wrap_content"
            android:layout_height="40sp" android:id="@+id/goToDetailBtn"
            app:layout_constraintStart_toStartOf="@+id/BbsUpdateContent"
            app:layout_constraintTop_toBottomOf="@+id/BbsUpdateContent" android:layout_marginTop="8dp"/>
    <Button
            android:text="수정하기"
            android:layout_width="wrap_content"
            android:layout_height="40sp" android:id="@+id/BbsUpdateBtn"
            app:layout_constraintTop_toTopOf="@+id/goToDetailBtn"
            app:layout_constraintBottom_toBottomOf="@+id/goToDetailBtn"
            app:layout_constraintEnd_toEndOf="@+id/BbsUpdateContent"/>
</androidx.constraintlayout.widget.ConstraintLayout>