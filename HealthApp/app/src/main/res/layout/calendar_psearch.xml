<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bbsback"
        tools:context=".psearch">
    <TextView
            android:text="시작일"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/startDateView"
            app:layout_constraintTop_toTopOf="@+id/startDateView"
            android:layout_marginEnd="30dp"/>
    <TextView
            android:id="@+id/startDateView"
            android:gravity="center" android:textSize="15sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@+id/startDate"
            app:layout_constraintTop_toTopOf="@+id/startDate"
            android:layout_marginEnd="20dp"/>
    <ImageButton
            android:id="@+id/startDate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_dialog_dialer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.85"/>
    <TextView
            android:text="종료일"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp" android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/endDateView"
            app:layout_constraintTop_toTopOf="@+id/endDateView"
            android:layout_marginEnd="30dp"/>
    <TextView
            android:id="@+id/endDateView"
            android:gravity="center" android:textSize="15sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@+id/endDate"
            app:layout_constraintTop_toTopOf="@+id/endDate"
            android:layout_marginEnd="20dp"/>
    <ImageButton
            android:id="@+id/endDate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_dialog_dialer"
            app:layout_constraintTop_toBottomOf="@+id/startDate"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/startDate"/>
    <Button
            android:text="검색"
            android:layout_width="157dp"
            android:layout_height="72dp"
            android:id="@+id/datesearchBtn"
            android:textSize="20dp"
            android:backgroundTint="@color/maincolor"
            app:layout_constraintTop_toBottomOf="@+id/endDateView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="500dp"
            android:layout_height="480dp"
            android:background="@drawable/border_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datesearchBtn"
            android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>