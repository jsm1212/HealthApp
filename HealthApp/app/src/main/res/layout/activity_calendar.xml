<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalendarActivity">

    <CalendarView
            android:layout_width="567dp"
            android:layout_height="379dp"
            android:id="@+id/calendarView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.045"/>
    <Button
            android:text="저장"
            android:layout_width="547dp"
            android:layout_height="58dp"
            android:id="@+id/save_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.837"/>
    <Button
            android:text="수정"
            android:layout_width="223dp"
            android:layout_height="64dp"
            android:id="@+id/cha_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintVertical_bias="0.906"/>
    <Button
            android:text="삭제"
            android:layout_width="223dp"
            android:layout_height="64dp"
            android:id="@+id/del_Btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            app:layout_constraintVertical_bias="0.907"/>

    <TextView
            android:text="TextView"
            android:layout_width="571dp"
            android:layout_height="131dp"
            android:id="@+id/contentView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.741"/>
    <TextView
            android:text="diaryTextView"
            android:layout_width="567dp"
            android:layout_height="66dp"
            android:id="@+id/diaryTextView"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.476"
            app:layout_constraintHorizontal_bias="0.515"/>
    <EditText
            android:layout_width="570dp"
            android:layout_height="64dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/contextEditText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintVertical_bias="0.607"/>
    <TextView
            android:text="내용을 입력해 주세요."
            android:layout_width="567dp"
            android:layout_height="42dp" android:id="@+id/caltextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.484" app:layout_constraintVertical_bias="0.546"/>


</androidx.constraintlayout.widget.ConstraintLayout>