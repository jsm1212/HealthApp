<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/itemback"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp">


    <TextView
            android:textColor="@color/subcolor"
            android:text="열네번째 테스트 게시글"
            android:layout_width="400sp"
            android:layout_height="30sp"
            android:id="@+id/WorkBbsTitle"
            android:textSize="17sp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="normal"
            android:textFontWeight="100"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:textColor="@color/subcolor"
            android:text="닉네임은여덟글자"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:id="@+id/WorkBbsWriter"
            android:textSize="12sp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintStart_toStartOf="@+id/WorkBbsTitle"
            app:layout_constraintTop_toBottomOf="@+id/WorkBbsTitle" android:layout_marginTop="16dp"/>
    <TextView
            android:textColor="@color/subcolor"
            android:text="2022-04-12 13:25"
            android:layout_width="140sp"
            android:textSize="12sp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="25dp" android:id="@+id/WorkBbsWdate"
            app:layout_constraintStart_toEndOf="@+id/WorkBbsWriter"
            app:layout_constraintTop_toTopOf="@+id/WorkBbsWriter"
            android:layout_marginStart="20dp"/>
    <TextView
            android:textColor="@color/subcolor"
            android:text="댓글수"
            android:layout_width="70sp"
            android:layout_height="25sp" android:id="@+id/WorkBbsReplyCount"
            android:textSize="15sp"
            android:gravity="center|right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/WorkBbsReadCount"/>
    <TextView
            android:textColor="@color/subcolor"
            android:text="37"
            android:layout_width="70sp"
            android:textSize="15sp"
            android:gravity="center|right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="23sp" android:id="@+id/WorkBbsReadCount"
            app:layout_constraintEnd_toEndOf="@+id/WorkBbsReplyCount"
            app:layout_constraintTop_toTopOf="@+id/WorkBbsWdate"
            app:layout_constraintBottom_toBottomOf="@+id/WorkBbsWdate"/>
    <TextView
            android:textColor="@color/subcolor"
            android:text="❤50"
            android:layout_width="70sp"
            android:textSize="15sp"
            android:gravity="center|right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="25sp" android:id="@+id/WorkBbsLikeCount"
            app:layout_constraintBottom_toTopOf="@+id/WorkBbsReplyCount"
            app:layout_constraintEnd_toEndOf="@+id/WorkBbsReplyCount"/>
</androidx.constraintlayout.widget.ConstraintLayout>