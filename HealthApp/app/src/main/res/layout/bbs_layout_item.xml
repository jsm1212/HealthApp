<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp">


    <TextView
            android:text="열네번째 테스트 게시글"
            android:layout_width="290dp"
            android:layout_height="18dp"
            android:id="@+id/WorkBbsTitle"
            android:textSize="10sp"
            android:gravity="center|left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"/>
    <TextView
            android:text="닉네임은여덟글자"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:id="@+id/WorkBbsWriter"
            android:textSize="10sp"
            android:gravity="center|left"
            app:layout_constraintStart_toEndOf="@+id/WorkBbsTitle"
            app:layout_constraintBottom_toBottomOf="@+id/WorkBbsTitle"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="작성일"
            android:layout_width="174dp"
            android:textSize="10sp"
            android:gravity="center|left"
            android:layout_height="18dp" android:id="@+id/WorkBbsWdate"
            app:layout_constraintStart_toEndOf="@+id/WorkBbsWriter"
            app:layout_constraintTop_toTopOf="@+id/WorkBbsWriter"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>