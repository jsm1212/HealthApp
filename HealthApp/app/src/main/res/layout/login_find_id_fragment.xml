<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.FindIdFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="524dp"
            android:layout_height="269dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.4">

        <TextView
                android:id="@+id/findNameText"
                android:text="이름"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="136dp"
                android:layout_height="56dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.146" app:layout_constraintVertical_bias="0.169"/>
        <TextView
                android:id="@+id/findTelText"
                android:text="전화번호"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="136dp"
                android:layout_height="56dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.145" app:layout_constraintVertical_bias="0.791"/>
        <EditText
                android:id="@+id/findNameEditText"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_width="251dp"
                android:layout_height="62dp"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.846" app:layout_constraintVertical_bias="0.173"/>
        <EditText
                android:id="@+id/findTelEditText"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_width="251dp"
                android:layout_height="62dp"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.846" app:layout_constraintVertical_bias="0.782"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="아이디 찾기"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="209dp"
            android:layout_height="63dp" android:id="@+id/findIdText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.238"/>
    <Button
            android:text="찾기"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="256dp"
            android:layout_height="74dp" android:id="@+id/findMyIdBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.658"/>
</androidx.constraintlayout.widget.ConstraintLayout>