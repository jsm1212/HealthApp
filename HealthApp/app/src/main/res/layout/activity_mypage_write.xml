<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mypage.MypageWriteActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyWrite"
            android:layout_width="match_parent"
            android:layout_height="700dp"/>
    <Button
            android:id="@+id/mywAllBtn"
            android:text="전체선택"
            android:layout_width="wrap_content" android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/recyWrite"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/mywDeleteBtn"
            android:text="삭제"
            android:layout_width="wrap_content" android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/recyWrite"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:text="내 게시글"
            android:gravity="center" android:textSize="30sp"
            android:layout_width="match_parent" android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>